{
  "include": ["./**/*.ts"],
  "compilerOptions": {
    // Target
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",

    // Safety
    "strict": true,

    // Behavior
    "esModuleInterop": true,

    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "paths": {
      // This is solely to stop a bug with @types/node as of 12/15/2023
      "undici-types": [
        "./node_modules/undici-types/index.d.ts"
      ],
    }
  }
}
